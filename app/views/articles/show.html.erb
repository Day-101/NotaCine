<h3 class="text-white"><%= @article.title %></h3>
<p class="text-white"><%= @article.content %></p>
<%= image_tag @article.article_picture if @article.article_picture.attached? %>
<%= link_to "Delete", article_path(@article), method: :delete, class:"btn btn-danger" if user_signed_in? && current_user.rank == 0 %>
<%= link_to "Edit article", edit_article_path(@article), class: "btn btn-warning" %>
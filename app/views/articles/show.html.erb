<div class="container-news-background">
  <div class="container container-news article-show p-4">
    <div class="row">
      <div class="col-12 edit-article">
        <%= link_to "Back", articles_path, class: "btn btn-warning" %>
        <h1><%= @article.title %></h1>
        <span>Posted on <%= @article.created_at.strftime('%m/%d/%Y') %> Written by <%= link_to User.find(@article.user_id).username, user_path(@article.user_id) %></span>
        <%= image_tag @article.article_picture, class: "img_article" if @article.article_picture.attached? %>
        <h2><%= @article.lead %></h2>
        <p class="content_article"><%= @article.content %></p>
        <span class="article-author"><%= link_to User.find(@article.user_id).username, user_path(@article.user_id) %></span>
        <div class="btn-group">
          <%= link_to "Edit", edit_article_path(@article), class: "btn btn-warning" if user_signed_in? && current_user.rank == 0 %>
          <%= link_to "Delete", article_path(@article), method: :delete, class:"btn btn-danger" if user_signed_in? && current_user.rank == 0 %>
        </div>
      </div>
    </div>
  </div>
</div>
<%= form_with url: searches_path do |f| %>
  <div class="search-input">
    <%= f.text_field :search, placeholder: "Search Movie", :autocomplete => "off" %>
    <ul id="search-results"></ul>
  </div>
  <%= f.button(type: "submit", class: "btn btn-transparent text-white btn-search" ) do %>
    <i class="fas fa-search"></i>
  <% end %>
<% end %>
<%= javascript_pack_tag 'searchbar' %>

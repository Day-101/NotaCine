<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top">
    <%= link_to root_path, class:"navbar-brand brand" do %>
      <%= image_tag image_path("notacine-logo-dark.svg"), class:"d-inline-block align-top d-block", style:"width:95px; height:22px" %>
    <% end %>
  
      <% if user_signed_in? %>
        <div class="btn-group dropdown-login dropdown-signed d-flex align-items-center">
          <%= link_to user_path(current_user), class:"" do %>

            <%= image_tag current_user.avatar, style:"width:30px;", alt: "user avatar"%>
          
          <% end %>
          <button type="button" class="btn btn-transparent text-white dropdown-toggle dropdown-toggle-split" id="dropdownMenuReference" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-reference="parent">
            <span class="sr-only">Toggle Dropdown</span>
          </button>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuReference">
            <%= link_to "Profile", user_path(current_user), class:"dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Log out", destroy_user_session_path, class:"dropdown-item", method: :delete %>
          </div>
      <% else %>
      <div class="dropdown dropdown-login">
        <button class="btn btn-transparent text-white dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <i class="fas fa-user"></i>
        </button>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
          <%= link_to "Log in", new_user_session_path, class:"dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to "Sign up", new_user_registration_path, class:"dropdown-item" %>
        </div>
      <% end %>
      </div>

    <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="navbar-collapse collapse" id="navbarCollapse">
      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <div class="nav-link dropdown-toggle text-white" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </div>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to "All categies", root_path, class:"dropdown-item" %>
            <%= link_to "Action", root_path, class:"dropdown-item" %>
            <%= link_to "...", root_path, class:"dropdown-item" %>
          </div>
        </li>
        <!-- En attentende de la feature News
        <li class="nav-item">
          <%#= link_to "News", root_path, class:"nav-link text-white" %>
        </li>-->
      </ul>

      <div id="searchbar" class="d-flex align-items-center">
        <input type="search" class="website-search" placeholder="Find a movie">
        <button class="btn btn-transparent text-white" type="submit"><i class="fas fa-search"></i></button>
      </div>
      
    </div>
  </nav>
</header>
<div class="container">
  <div class="row">
    <div class="card mx-auto card-d" id="forgotpass-card">
      <div class="card-body">
        <p class="card-title display-7"><strong>Change your password</strong></p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          <hr>
          <div class="field">
            <%= f.label :password, "New password" %><br/>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %><br/>
            <% if @minimum_password_length %>
            <small><em><i class="fas fa-info-circle"></i> <%= @minimum_password_length %> characters minimum</em></small>
            <% end %>
          </div>
          <div class="field mt-4">
            <%= f.label :password_confirmation, "Confirm new password" %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br/>
          </div>
          <div class="actions">
            <%= f.submit "Change my password", :class => 'btn btn-primary btn-block my-4' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

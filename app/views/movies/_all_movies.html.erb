<% @movies.each do |movies| %>
  <div class="col-6 col-sm-6 col-md-3 poster-movies">
    <div class="overlay_item item_3">
      <%= link_to movie_path(movies.id) do %>
        <%= image_tag movies.image_url, alt: movies.title, :class => "img-grid frontside" %>
      <% end %>   
      <div class="item_content">
        <div class="item_title">
          <h2><%= movies.title %><span class="text-secondary">(<%= movies.year %>)</span></h2>
        </div>
        <div class="item_badge">
          <% movies.genres.each do |genre| %>
            <%= link_to genre.title, search_path({"categories" => [genre.id]}), :class => "badge badge-secondary" %>
          <% end %>
        </div>
        <div class="item_see_more_wrapper">
          <%= link_to "View details", movie_path(movies.id), :class => "btn btn-sm btn-outline-primary item_see_more" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
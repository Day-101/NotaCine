<div class="container text-white">
  <div class="row">
    <div class="col-10">

      <div class="row">
        <div class="col-4">
          <%=image_tag @movie.image_url, :class => 'movie-poster' %>
        </div>
        <div class="col-8">
          <p class="display-4"><%= @movie.title %></p>
          <%= @movie.year %> â€• Directed by <%= @movie.director %>
          <hr>
          <p class="text-muted"><%= @movie.description %></p>
          <br>
          <% if user_signed_in? %>
            <% unless @movie.already_reviewed(current_user) %>
              <%= link_to new_movie_notation_path(@movie),class: "btn btn-primary" do %>
                Leave a review
                <i class="fas fa-sliders-h"></i>
              <% end %>
            <% else %>
              <%= link_to edit_movie_notation_path(@movie,Notation.find_by(movie:@movie, user:current_user)),class: "btn btn-primary" do %>
                Edit your review
                <i class="fas fa-sliders-h"></i>
              <% end %>
            <% end %>
          
            <%= link_to "Edit", edit_movie_path(@movie), class:"btn btn-warning" if current_user.rank == 0 %>
          <% end %>

        </div>
      </div><br>
      <div class="row">
        <div class="col-6">
          <p class="h4">NotaCine</p><br>
          <% unless Notation.find_by(movie:@movie).nil? %>
            <%= form_for @movie do |f| %>
              <%= f.label :some_size, "Scenario" %>
              <%= f.range_field :title, :in => 0..100, :step => 1, value:@movie.notacine_reviews("scenario"), :disabled => true  %><br>

<div class="container text-white my-4">
  <div class="row">
  <div class="col-8 mx-auto">
    <h1>Edit: "<%= @movie.title %>"</h1>
    <hr>
    <%= form_with model: @movie do |f| %>
      <%= f.label :title, "Movie title:" %><br>
      <%= f.text_field :title, :size=>"50", placeholder:"Movie title"%><br>
      <%= f.label :description, "Synopsis" %><br>
      <%= f.text_area :description, :size=>"50", placeholder:"Synopsis" %><br>
      <%= f.label :year, "Year" %><br>
      <%= f.number_field :year, :size=>"15", placeholder:"Year" %><br>
      <%= f.label :director, "Director" %><br>
      <%= f.text_field :director, :size=>"50", placeholder:"Director" %><br>
      <%= f.label :actors, "Actors" %><br>
      <%= f.text_field :actors, :size=>"50", placeholder:"Actors" %><br>
      <%= f.label :image_url, "Image" %><br>
      <%= f.text_field :image_url, :size=>"50", placeholder:"URL" %><br>
      <br>
      <%= f.submit class:"btn btn-success" %> <%= button_to "Delete", movie_path(@movie), data: { confirm: "Are you sure ?" }, class: "btn btn-danger", method: :delete %>
    <% end %><br>
    </div>
  </div>
</div>

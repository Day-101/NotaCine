<div class="container" id="search-bar-index">
	<h4 class="text-center text-white">Check the relative scale notation of a movie.</h4>
	<%= link_to "How it works ?" %>
  <div id="searchbar-index">
		<%= form_tag(movies_path, :method => "get") do %>
			<%= text_field_tag :title, params[:title], placeholder: "Search Movies" %>
			<%= button_tag(type: "submit", class: "btn btn-transparent-pading text-white") do %>
					<i class="fas fa-search"></i>
			<% end %>
		<% end %>
	</div>
</div>

<section id="movies" class="pb-5">
  <div class="container">
    <div class="row">
		<% @movies.each do |movies| %>
			<div class="col-xs-12 col-sm-6 col-md-3">
				<div class="image-flip" ontouchstart="this.classList.toggle('hover');">
					<div class="mainflip">
						<div class="frontside">
							<div class="card">
								<div class="card-body" id="poster">
									<%= image_tag movies.image_url, alt: movies.title %>
								</div>
							</div>
						</div>
						<%= link_to movie_path(movies.id) do %>
						<div class="backside">
							<div class="card">
								<h4 class="card-title text-center"><%= movies.title %></h4>
								<div class="card-body text-center" id="returned-card">
									<%= form_for movies do |f| %>
										<%= f.label :some_size, "Scenario" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
										<%= f.label :some_size, "Image" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
										<%= f.label :some_size, "Editing" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
										<%= f.label :some_size, "Sound" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
										<%= f.label :some_size, "Makeup" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
										<%= f.label :some_size, "Directing" %>
										<%= f.range_field :title, :in => 0..100, :step => 1, :disabled => true %>
									<% end %>
                </div>
            	</div>
            </div>
						<% end %>
          </div>
        </div>
      </div>
		<% end %>
    </div>
  </div>
</section>
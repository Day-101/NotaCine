<div class="container" id="search-bar-index">
	<h1 class="text-center text-white">Check the relative scale notation of a movie</h1>
	<%= link_to "How to read a relative rating ?", statics_how_path %>
  <div id="search-bar-border">
		<%= form_tag(movies_path, :method => "get") do %>
			<%= text_field_tag :title, params[:title], placeholder: "Search Movies" %>
			<%= button_tag(type: "submit", class: "btn btn-transparent-pading text-white") do %>
					<i class="fas fa-search"></i>
			<% end %>
		<% end %>
	</div>
</div>


<section id="last-added" class="pb-5">
  <div class="container" id="text-coloring">
	<h3>Last added</h3>
    <div class="row">
		<% Movie.last_four.each do |movies| %>
			<div class="col-xs-12 col-sm-6 col-md-3">
				<div class="image-flip" ontouchstart="this.classList.toggle('hover');">
					<div class="mainflip">
						<div class="frontside">
							<div class="card">
								<div class="card-body" id="poster">
									<%= image_tag movies.image_url, alt: movies.title %>
								</div>
							</div>
						</div>
						<div class="backside">
							<div class="card">
								<h4 class="card-title text-center"><%= movies.title %></h4>
								<div class="card-body text-center nota-rate" id="returned-card">
									<% if movies.reviewed_by_admin %>
										<%= form_for movies do |f| %>
											<%= f.label :scenario, "Scenario" %>
											<%= f.range_field :scenario, :in => 0..100, :step => 1, value:movies.all_reviews("scenario"), :disabled => true  %>
											<%= f.label :image, "Image" %>
											<%= f.range_field :image, :in => 0..100, :step => 1, value:movies.all_reviews("image"), :disabled => true %>
											<%= f.label :editing, "Editing" %>
											<%= f.range_field :editing, :in => 0..100, :step => 1, value:movies.all_reviews("editing"), :disabled => true %>
											<%= f.label :sound, "Sound" %>
											<%= f.range_field :sound, :in => 0..100, :step => 1, value:movies.all_reviews("sound"), :disabled => true %>
											<%= f.label :makeup, "Makeup" %>
											<%= f.range_field :makeup, :in => 0..100, :step => 1, value:movies.all_reviews("makeup"), :disabled => true %>
											<%= f.label :directing, "Directing" %>
											<%= f.range_field :directing, :in => 0..100, :step => 1, value:movies.all_reviews("directing"), :disabled => true %>
										<% end %>
									<% else %>
										<p>This movie is not yet reviewed</p>
									<% end %>
									<%= link_to "Show me this movie", movie_path(movies.id), :class => "btn btn-primary btn-sm" %>
                </div>
            	</div>
            </div>
          </div>
        </div>
      </div>
		<% end %>
    </div>
  </div>
</section>


